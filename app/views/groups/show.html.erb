<h1><%= @group.name %></h1>
<h2>Enlisted users</h2>
<ul>
	<% @group.users.each do |user| %>
		<li><%= link_to user.username, user %></li>
	<% end %>
</ul>
<h2>Permissions</h2>
<ul>
	<% @group.permissions.each do |permission| %>
		<li><%= link_to permission.area.name, permission %></li>
	<% end %>
</ul>
