<h1>User Invitations</h1>
<table width="100%">
	<tr>
		<th>Email</th>
	</tr>
	<% @invitations.each do |invitation| %>
		<tr>
			<td><%= invitation.email %></td>
			<td><%= link_to "Delete", invitation, :method => :delete, :confirm => "Are you sure?" %></td>
		</tr>
	<% end %>
</table>
<br>
<%= link_to "New",  :action => :new %>